


# Your code here ìÜâìÜù ìÜü ìÜû ìÜù ìÜüìáº
text = """
[–ö—É–ø–ª–µ—Ç 1]
–í –∏—Å—Ç–µ—Ä–∏–∫–µ –∫—Ä—É–∂–∏–ª–∞—Å—å –º–∞–º–∞ –í–∞–ª—è
–ù–∞ –∑–∞–¥–Ω–µ–º —Ñ–æ–Ω–µ –∑–∞–º–µ—Ä –ø–∞–ø–∞ –¢–æ–ª—è
–í —Ä–∞–¥–∏—É—Å–µ –º–µ—Ç—Ä–∞ –≤–æ—Ü–∞—Ä–∏–ª—Å—è –∂–µ—Å—Ç–æ—á–∞–π—à–∏–π —Ö–∞–æ—Å
–ö–æ–≥–¥–∞ –≤—Å–µ–º –ø–æ–Ω—è—Ç–Ω–æ —Å—Ç–∞–ª–æ: —Å—ã–Ω –æ—Å—Ç–∞–ª—Å—è –±–µ–∑ –¥–∏–ø–ª–æ–º–∞
–ú–∞–º–∞, –Ω–µ –∫—Ä–∏—á–∏, —Ö–≤–∞—Ç–∏—Ç –ø–ª–∞–∫–∞—Ç—å, –Ω–µ —Å–º–µ–π

[–ö—É–ø–ª–µ—Ç 2]
–Ø —Å–Ω–æ–≤–∞ –Ω–∞ —É–ª–∏—Ü–µ, –∏–¥—É –±–µ–∑ —Ü–µ–ª–∏
–°–≤–µ—Ç–∏—Ç —Å–æ–ª–Ω—Ü–µ, –Ω–æ –≤ –≥–æ–ª–æ–≤–µ –º–µ—Ç–µ–ª–∏
–ó–∞–±—É–¥—å –ø—Ä–æ –≤—Å–µ, –∫—Ç–æ —Ç–µ–±—è –æ–±–∏–¥–µ–ª
–î–∞–≤–∞–π –≤–º–µ—Å—Ç–µ –∂–∏—Ç—å, –∫–∞–∂–¥—ã–π –º–∏–≥ ‚Äî –ø–æ–±–µ–¥–∞

[–ü—Ä–µ–¥–ø—Ä–∏–ø–µ–≤ 1]
–í–¥—Ä—É–≥ —É–≤–∏–¥–µ–ª —Å–æ–ª–Ω—Ü–µ ‚Äî –∏ —Ç–æ–≥–¥–∞ —Å–µ–±–µ —è —Å–∫–∞–∑–∞–ª:

[–ü—Ä–µ–¥–ø—Ä–∏–ø–µ–≤ 2]
–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!

[–ü—Ä–∏–ø–µ–≤]
–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!
–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!
–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!
–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!
"""

verses = {
    "–∫—É–ø–ª–µ—Ç 1": "–í –∏—Å—Ç–µ—Ä–∏–∫–µ –∫—Ä—É–∂–∏–ª–∞—Å—å –º–∞–º–∞ –í–∞–ª—è\n–ù–∞ –∑–∞–¥–Ω–µ–º —Ñ–æ–Ω–µ –∑–∞–º–µ—Ä –ø–∞–ø–∞ –¢–æ–ª—è\n–í —Ä–∞–¥–∏—É—Å–µ –º–µ—Ç—Ä–∞ –≤–æ—Ü–∞—Ä–∏–ª—Å—è –∂–µ—Å—Ç–æ—á–∞–π—à–∏–π —Ö–∞–æ—Å\n–ö–æ–≥–¥–∞ –≤—Å–µ–º –ø–æ–Ω—è—Ç–Ω–æ —Å—Ç–∞–ª–æ: —Å—ã–Ω –æ—Å—Ç–∞–ª—Å—è –±–µ–∑ –¥–∏–ø–ª–æ–º–∞\n–ú–∞–º–∞, –Ω–µ –∫—Ä–∏—á–∏, —Ö–≤–∞—Ç–∏—Ç –ø–ª–∞–∫–∞—Ç—å, –Ω–µ —Å–º–µ–π",
    "–∫—É–ø–ª–µ—Ç 2": "–Ø —Å–Ω–æ–≤–∞ –Ω–∞ —É–ª–∏—Ü–µ, –∏–¥—É –±–µ–∑ —Ü–µ–ª–∏\n–°–≤–µ—Ç–∏—Ç —Å–æ–ª–Ω—Ü–µ, –Ω–æ –≤ –≥–æ–ª–æ–≤–µ –º–µ—Ç–µ–ª–∏\n–ó–∞–±—É–¥—å –ø—Ä–æ –≤—Å–µ, –∫—Ç–æ —Ç–µ–±—è –æ–±–∏–¥–µ–ª\n–î–∞–≤–∞–π –≤–º–µ—Å—Ç–µ –∂–∏—Ç—å, –∫–∞–∂–¥—ã–π –º–∏–≥ ‚Äî –ø–æ–±–µ–¥–∞",
    "–ø—Ä–µ–¥–ø—Ä–∏–ø–µ–≤ 1": "–í–¥—Ä—É–≥ —É–≤–∏–¥–µ–ª —Å–æ–ª–Ω—Ü–µ ‚Äî –∏ —Ç–æ–≥–¥–∞ —Å–µ–±–µ —è —Å–∫–∞–∑–∞–ª:",
    "–ø—Ä–µ–¥–ø—Ä–∏–ø–µ–≤ 2": "–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!",
    "–ø—Ä–∏–ø–µ–≤": "–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!\n–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!\n–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!\n–Ø –≤—ã–±–∏—Ä–∞—é ‚Äî –∂–∏—Ç—å –≤ –∫–∞–π—Ñ!"
}

while True:
    user_input = input("–í–≤–µ–¥–∏—Ç–µ –Ω–æ–º–µ—Ä –∑–∞–¥–∞–Ω–∏—è (1, 2, 3) –∏–ª–∏ '–≤—ã—Ö–æ–¥': ")
    if user_input == "–≤—ã—Ö–æ–¥":
        break
    elif user_input == "1":
        element = input("–í–≤–µ–¥–∏—Ç–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —ç–ª–µ–º–µ–Ω—Ç–∞ (–∫—É–ø–ª–µ—Ç 1, –∫—É–ø–ª–µ—Ç 2, –ø—Ä–µ–¥–ø—Ä–∏–ø–µ–≤ 1, –ø—Ä–µ–¥–ø—Ä–∏–ø–µ–≤ 2, –ø—Ä–∏–ø–µ–≤): ")
        if element in verses:
            print(verses[element])
        else:
            print("–ù–µ–≤–µ—Ä–Ω–æ–µ –Ω–∞–∑–≤–∞–Ω–∏–µ —ç–ª–µ–º–µ–Ω—Ç–∞.")
    elif user_input == "2":
        lines = text.replace("[–ö—É–ø–ª–µ—Ç 1]", "").replace("[–ö—É–ø–ª–µ—Ç 2]", "").replace("[–ü—Ä–µ–¥–ø—Ä–∏–ø–µ–≤ 1]", "").replace(
            "[–ü—Ä–µ–¥–ø—Ä–∏–ø–µ–≤ 2]", "").replace("[–ü—Ä–∏–ø–µ–≤]", "").strip()
        for line in lines.split("\n"):
            print(line.center(60))
    elif user_input == "3":
        count_type = input("–í–≤–µ–¥–∏—Ç–µ '–∫—É–ø–ª–µ—Ç' –∏–ª–∏ '–ø–µ—Å–Ω—è': ")
        import re
        from collections import Counter


        def get_word_count(text, only_verses=False):
            if only_verses:
                verses_text = "\n".join([verses["–∫—É–ø–ª–µ—Ç 1"], verses["–∫—É–ø–ª–µ—Ç 2"]])
            else:
                verses_text = text

            words = re.findall(r'\b\w+\b', verses_text.lower())
            return Counter(words)


        if count_type == "–∫—É–ø–ª–µ—Ç":
            word_count = get_word_count(text, True)
        elif count_type == "–ø–µ—Å–Ω—è":
            word_count = get_word_count(text)
        else:
            print("–ù–µ–≤–µ—Ä–Ω—ã–π –≤–≤–æ–¥.")
            continue

        most_common = word_count.most_common(3)
        for idx, (word, count) in enumerate(most_common, 1):
            print(f"{idx}. \"{word}\" - {count} —Ä–∞–∑")
    else:
        print("–ù–µ–≤–µ—Ä–Ω—ã–π –Ω–æ–º–µ—Ä –∑–∞–¥–∞–Ω–∏—è.")
