companions = ["Astarion", "Gale", "Karlach", "Lae'zel",
              "Shadowheart", "Wyll", "The Dark Urge", "Halsin",
              "Jaheira", "Minsc", "Minthara", "Alfira", "Losiir"]

slice_1 = companions[1:4]
print(slice_1)

slice_2 = companions[1:4] + companions[7:9] + companions[9:11] + companions[11:12]
print(slice_2)

slice_3 = companions[11:12] + companions[8:9] + companions[5:6] + companions[2:3]
print(slice_3)

slice_4 = companions[0:1] + companions[-1:]
print(slice_4)
